!!!
%html
  %head
    %title {block:SearchPage}Search results for "{SearchQuery}" - {/block:SearchPage}{block:PostSummary}{PostSummary} - {/block:PostSummary}{Title}
    
    %script{:src => 'http://use.typekit.com/atx8cqn.js', :type => 'text/javascript'}
    :javascript
      try{Typekit.load();}catch(e){}

    %link{:rel => 'alternative', :type => 'application/rss+xml', :href => '{RSS}'}
    %meta{:charset => 'utf-8'}
    
    - meta_tags.each do |name,content|
      %meta{:name => name, :content => content}
    
    %link{:rel => 'shortcut icon', :href => '{Favicon}'}
    {block:Description}
    %meta{:name => 'description', :content => '{MetaDescription}'}
    {/block:Description}
    = partial :google_analytics
    
    %style{:type => 'text/css'}
      :sass
        html
          border-left: 1px solid #FFB3B3
          margin-left: 100px
        body
          margin:
            left: -100px
          padding-left: 120px
          background: url('/images/rule.png') repeat 0 1000px
        /   background: white url('/images/rule.png') repeat left 100px
        /   font-size: 14px
        /   line-height: 20px
        / body
        /   border-left: 1px solid #FFB3B3
        /   margin-left: 100px
      
    
  %body
    %header
      %h1
        %a{:href => '/'} {Title}
      {block:Description}
      .description {Description}
      {/block:Description}
    
    #posts
      {block:Posts}

      {block:Text}
      .post.text
        %a.permalink{:href => '{Permalink}'} &sect;
        {block:Title}
        %h3 {Title}
        {/block:Title}
        {Body}
      {/block:Text}

      {block:Photo}
      .post.photo
        %a.permalink{:href => '{Permalink}'} &sect;
        .invisilink
          {LinkOpenTag}
          %img{:alt => '{PhotoAlt}', :src => '{PhotoURL-400}'}
          {LinkCloseTag}
        {block:Caption}{Caption}{/block:Caption}
      {/block:Photo}

      {block:Quote}
      .post.quote
        %a.permalink{:href => '{Permalink}'} &sect;
        .deco “
        %blockquote {Quote}
        {block:Source}
        %cite — {Source}
        {/block:Source}
      {/block:Quote}

      {block:Link}
      .post.link
        %a.permalink{:href => '{Permalink}'} &sect;
        %a.go{:href => '{URL}'} {Name}
        {block:Description}{Description}{/block:Description}
      {/block:Link}

      {block:Chat}
      .post.chat
        %a.permalink{:href => '{Permalink}'} &sect;
        {block:Title}
        %h3 {Title}
        {/block:Title}
        %ol.conv
          {block:Lines}
          %li{:class => '{Alt}'}
            {block:Label}
            %b {Label}
            {/block:Label}
            {Line}
          {/block:Lines}
      {/block:Chat}

      {block:Audio}
      .post.audio
        %a.permalink{:href => '{Permalink}'} &sect;
        {AudioPlayerWhite}
        {block:Caption}{Caption}{/block:Caption}
      {/block:Audio}

      {block:Video}
      .post.video
        %a.permalink{:href => '{Permalink}'} &sect;
        {Video-400}
        {block:Caption}{Caption}{/block:Caption}
      {/block:Video}

      {block:PostNotes}{PostNotes}{/block:PostNotes}

      {/block:Posts}

    {block:Pagination}
    %nav
      {block:PreviousPage}
      %a.prev{:href => '{PreviousPage}'} Previous Page
      %span.pipe |
      {/block:PreviousPage}
      {block:NextPage}
      %a.next{:href => '{NextPage}'} Next Page
      {/block:NextPage}
    {/block:Pagination}
    
    %script{:src => 'http://thelincolnshirepoacher.com/js/codehighlighter.js', :type => 'text/javascript'}
    %script{:src => 'http://thelincolnshirepoacher.com/poacher.js', :type => 'text/javascript'}
