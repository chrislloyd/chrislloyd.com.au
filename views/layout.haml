!!!
%html
  %head
    %title= page_title
    
    %meta{'charset' => 'UTF-8'}
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8'}
    
    - meta_tags.each do |name,content|
      %meta{:name => name, :content => content}
      
    %meta{:name => 'description', :content => "The Lincolnshire Poacher is a collection of articles written by Chris Lloyd about programming, technology & business."}
    
    %link{:rel => 'license', :href => 'http://creativecommons.org/licenses/by-nc/2.5/au'}
    
    %link{:rel => 'shortcut icon', :href => '/favicon.ico'}
    %link{:href => '/screen.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/print.css', :media => 'print', :rel => 'stylesheet', :type => 'text/css'}
    
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', :type => 'text/javascript'}
    %script{:src => '/libs.js', :type => 'text/javascript'}
    
    = partial :typekit
    = partial :google_analytics if production?
    
    /[if IE]
      %script{:src => 'http://html5shiv.googlecode.com/svn/trunk/html5.js', :type => 'text/javascript'}
  %body
    %header
      %h1
        %a{:href => '/'} The Lincolnshire Poacher
        by Chris Lloyd
    
    = yield
    
    %script{:type => 'text/coffeescript'}= coffee(:poacher)
    - artworks.each do |_, fn|
      %script{:type => 'text/x-artwork'}= fn
