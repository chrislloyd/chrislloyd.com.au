!!!
%html
  %head
    %title= article_title
    
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html;charset=utf-8'}
    
    - meta_tags
    
    %link{:href => '/screen.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/print.css', :media => 'print', :rel => 'stylesheet', :type => 'text/css'}
    
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', :type => 'text/javascript'}
    %script{:src => '/js/raphael.js', :type => 'text/javascript'}
    
    = partial :openid
    = partial :typekit
    = partial :google_analytics if production?
    
    :javascript
      $(document).ready(function(){
        var paper = Raphael('art', 960, 300);
        
        for(var x=0; x<960; x+=50) {
          paper.path(['M', 0, x, 'L', x, 0]).attr({
            stroke: '#FF0',
            'stroke-width': 10
          });
        }
        
        
        paper.rect(350,100,300,300).attr({
          fill: '#06C',
          stroke: 'none',
          rotation: 45,
          opacity: 0.9
        });
        paper.rect(350,50,300,300).attr({
          fill: '#06C',
          stroke: 'none',
          rotation: 45,
          opacity: 0.7
        });
        paper.rect(350,0,300,300).attr({
          fill: '#06C',
          stroke: 'none',
          rotation: 45,
          opacity: 0.5
        });
        paper.rect(350,-50,300,300).attr({
          fill: '#06C',
          stroke: 'none',
          rotation: 45,
          opacity: 0.3
        });
        
      });
    
  %body
    %header
      %h1
        %a{:href => '/'} The Lincolnshire Poacher
        by Chris Lloyd
    
    = yield
    
    %script{:src => '/js/codehighlighter.js', :type => 'text/javascript'}
